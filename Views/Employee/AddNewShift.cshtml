@model Shift
<!-- Page-header start -->
<div class="page-header ribbon-header">
    <div class="row align-items-end">
        <div class="col-lg-8">
            <div class="page-header-title">
                <div class="d-inline">
                    <h4>Shift</h4>
                    <span>Shift Lists</span>
                </div>
            </div>
        </div>
        <div class="col-lg-4">
            <div class="page-header-breadcrumb">
                <ul class="breadcrumb-title">
                    <li class="breadcrumb-item">
                        <a asp-action="index" asp-controller="Home"> <i class="icofont icofont-home"></i> </a>
                    </li>
                    <li class="breadcrumb-item">
                        <a>Shift</a>
                    </li>
                     <li class="breadcrumb-item">
                        <a href="#!">Lists</a>
                    </li>
                </ul>
            </div>
        </div>
    </div>
</div>
<!-- Page-header end -->
 @{await Html.RenderPartialAsync("ShiftList");}

 <!-- Modal large-->
           
<div class="modal fade" id="shift-model" tabindex="-1" role="dialog">
   <div class="modal-dialog modal-lg" role="document">
       <div class="modal-content">
           <div class="modal-header">
               <h5 class="modal-title">Shift</h5>
               <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                   <span aria-hidden="true">&times;</span>
               </button>
           </div>
        <div class="modal-body">
               <div class="row">
                   <div class="col-sm-12">
                       <!-- Basic Form Inputs card start -->
                       <div class="card">
                           <div class="card-block">
                               <h4 class="sub-title" style="border-bottom:2px #00ACED solid ">Shift Form</h4>
                               <form asp-action="AddNewShift" asp-controller="Employee" role="form" method="post" enctype="multipart/form-data">
                                   <div class="form-group row">
                                       <label class="col-sm-2 col-form-label" asp-for="Shift_Str">Shift<span class="text-danger">*</span></label>
                                       <div class="col-sm-10">
                                           <input type="text" asp-for="Shift_Str" class="form-control" required="required"/>
                                       </div>
                                   </div>
                                   <div class="form-group row">
                                       <label class="col-sm-2 col-form-label" asp-for="StartHour">Start Hour <span class="text-danger">*</span></label>
                                       <div class="col-sm-10">
                                           <div class="input-group date datetimepicker3">
                                               <input type="text" class="form-control" asp-for="StartHour" required="required">
                                               <span class="input-group-addon ">
                                                   <span class="icofont icofont-ui-calendar"></span>
                                               </span>
                                           </div>
                                       </div>
                                   </div>
                                   
                                   <div class="form-group row">
                                       <label class="col-sm-2 col-form-label" asp-for="EndHour">End Hour <span class="text-danger">*</span></label>
                                       <div class="col-sm-10">
                                           <div class="input-group date datetimepicker3">
                                               <input type="text" asp-for="EndHour" class="form-control" required="required">
                                               <span class="input-group-addon ">
                                                   <span class="icofont icofont-ui-calendar"></span>
                                               </span>
                                           </div>
                                           
                                       </div>
                                    </div>
                                   <div class="form-group row">
                                       <label class="col-sm-2 col-form-label" asp-for="Hour">Hour </label>
                                       <div class="col-sm-10">
                                           <input type="number" asp-for="Hour" maxlength="2" class="form-control" required="required"/>
                                       </div>
                                   </div>
                                   <div class="form-group text-right">
                                       <button type="submit" class="btn btn-primary">Submit</button>
                                   </div>
                               </form>
                           </div>
                       </div>
                   </div>
               </div>
           </div>
       </div>
   </div>
</div>

