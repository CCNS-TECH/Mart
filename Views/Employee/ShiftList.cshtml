<div class="card">
    <div class="card-header">
        <div class="text-right no-padding">
            <button type="button" class="btn btn-primary waves-effect" data-toggle="modal" data-target="#shift-model">Create New</button>
        </div>
        
     <h4 class="sub-title" style="border-bottom:2px #00ACED solid ">Shift Lists</h4>
    </div>
    <div class="card-block">
        <div class="dt-responsive table-responsive">
            <table class="table table-striped table-bordered nowrap">
                <thead>
                <tr>
                    <th>N<sup>o</sup></th>
                    <th>Shift</th>
                    <th>Start</th>
                    <th>End</th>
                    <th>Hours</th>
                    <th class="text-right">Action</th>
                </tr>
                </thead>
                <tbody>
                @{ int i = 1;}
                @foreach (var sf in ViewBag.ShiftList as List<Shift>)
                {
                    <tr>
                        <td>@i</td>
                        <td>@sf.Shift_Str</td>
                        <td>@sf.StartHour</td>
                        <td>@sf.EndHour</td>
                        <td>@sf.Hour</td>
                        <td class="text-right">
                            <a class="btn-info btn-sm text-white" asp-action="EditShift" asp-controller="Employee" asp-route-id="@sf.Id">Edit</a>|
                            <a class="btn-danger btn-sm waves-effect md-trigger text-white" onclick="deleteShift(@sf.Id);">Delete</a>
                        </td>
                    </tr>
                    i++;
                }
                </tbody>
            </table>
        </div>
    </div>
</div>

<script src="~/js/employee.js"></script>
