<!-- Page-header end --> 
<div class="card">
    <div class="card-header">
        @*<h5>User Account Lists</h5>
        <span>This is a table user account lists.</span>*@
        <div class="text-right no-padding">
            <a asp-action="AddNew" asp-controller="Employee" class="btn btn-primary btn-sm text-white">Add New</a>
        </div>
        
    <h4 class="sub-title" style="border-bottom:2px #00ACED solid ">Employee Lists</h4>
    </div>
    <div class="card-block">
        <div class="dt-responsive table-responsive">
            <table id="footer-select" class="table table-striped table-bordered nowrap">
                <thead>
                <tr>
                    <th>N<sup>o</sup></th>
                    <th>Code</th>
                    <th>Name</th>
                    <th>Gender</th>
                    <th>Dept</th>
                    <th>Position</th>
                    <th>Shift</th>
                    <th>Date</th>
                    <th class="text-right">Action</th>
                </tr>
                </thead>
                <tbody>
                @{ int i = 1;}
                @foreach (var user in ViewBag.Users as List<Employee>)
                {
                    <tr>
                        <td>@i</td>
                        <td>@user.Emp_Code</td>
                        <td>@user.Emp_Name</td>
                        <td>@user.Gender</td>
                        <td>@user.Dept_Str</td>
                        <td>@user.Post_Str</td>
                        <td>@user.Shift_Str</td>
                        <td>@user.Created_Date?.ToString("yyyy/MM/dd")</td>
                        <td class="text-right">
                            <a class="btn-info btn-sm text-white" asp-action="EditUser" asp-controller="Employee" asp-route-id="@user.Id">Edit</a>|
                            <a class="btn-danger btn-sm waves-effect md-trigger text-white" onclick="deleteUser(@user.Id);">Delete</a>
                        </td>
                    </tr>
                    i++;
                }
                </tbody>
                @*<tfoot>
                <tr>
                    <th></th>
                    <th>Name</th>
                    <th>Position</th>
                    <th>Office</th>
                    <th>Age</th>
                    <th>Start date</th>
                    <th>Salary</th>
                    <th></th>
                    <th></th>
                </tr>
                </tfoot>*@
            </table>
        </div>
    </div>
</div>
<script src="~/js/custom.js"></script>