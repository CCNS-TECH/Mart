<!-- Page-header start -->
<div class="page-header ribbon-header">
    <div class="row align-items-end">
        <div class="col-lg-8">
            <div class="page-header-title">
                <div class="d-inline">
                    <h4>Company</h4>
                    <span>Company Lists</span>
                </div>
            </div>
        </div>
        <div class="col-lg-4">
            <div class="page-header-breadcrumb">
                <ul class="breadcrumb-title">
                    <li class="breadcrumb-item">
                        <a asp-action="index" asp-controller="Home"> <i class="icofont icofont-home"></i> </a>
                    </li>
                    <li class="breadcrumb-item">
                        <a>Company</a>
                    </li>
                     <li class="breadcrumb-item">
                        <a href="#!">Lists</a>
                    </li>
                </ul>
            </div>
        </div>
    </div>
</div>
<!-- Page-header end --> 
<div class="card">
    <div class="card-header">
        <div class="text-right no-padding">
            <button type="button" class="btn btn-primary waves-effect" data-toggle="modal" data-target="#company-model">Create New</button>
        </div>
        
    <h4 class="sub-title" style="border-bottom:2px #00ACED solid ">Company Lists</h4>
    </div>
    <div class="card-block">
        <div class="dt-responsive table-responsive">
            <table id="footer-select" class="table table-striped table-bordered nowrap">
                <thead>
                <tr>
                    <th>N<sup>o</sup></th>
                    <th>Company Name</th>
                    <th>Phone</th>
                    <th>Email</th>
                    <th>Address</th>
                    <th>Wifi</th>
                    <th>Logo</th>
                    <th class="text-right">Action</th>
                </tr>
                </thead>
                <tbody>
                @{ int i = 1;}
                @foreach (var c in ViewBag.Company as List<Company>)
                {
                    <tr>
                        <td>@i</td>
                        <td>@c.Company_En</td>
                        <td>@c.Phone1</td>
                        <td>@c.Email</td>
                        <td>@c.Khan @c.Province</td>
                        <td>@c.Wifi</td>
                        <td><img src="~/images/logo/@c.Img" style="width: 30px;height: 30px;" class="img img-circle"/></td>
                        @if (c.Default == "Y")
                        {
                            <td class="text-right">
                                <a class="btn-success btn-sm text-white"><i class="icofont icofont-check-circled"></i></a> |
                                <a class="btn-info btn-sm text-white" asp-action="Edit" asp-controller="Company" asp-route-id="@c.Id">Edit</a>|
                                <a class="btn-danger btn-sm waves-effect md-trigger text-white" onclick="deletecompany(@c.Id);">Delete</a>
                            </td>
                        }
                        else
                        {
                            <td class="text-right">
                                <a class="btn-danger btn-sm text-white" onclick="setcompany(@c.Id)"><i class="icofont icofont-eye-alt"></i></a> |
                                <a class="btn-info btn-sm text-white" asp-action="Edit" asp-controller="Company" asp-route-id="@c.Id">Edit</a>|
                                <a class="btn-danger btn-sm waves-effect md-trigger text-white" onclick="deletecompany(@c.Id);">Delete</a>
                            </td>
                        }
                        
                    </tr>
                    i++;
                }
                </tbody>
            </table>
        </div>
    </div>
</div>