@{
    Layout = "InvLayout/_InvLayout";
}
@model SubCategoryL1
@{
    var cates =await CategoryService.GetCateList();
}
<!-- Page-header start -->
<div class="page-header ribbon-header">
    <div class="row align-items-end">
        <div class="col-lg-8">
            <div class="page-header-title">
                <div class="d-inline">
                    <h4>Edit Subcategory</h4>
                    <span>Subcategory</span>
                </div>
            </div>
        </div>
        <div class="col-lg-4">
            <div class="page-header-breadcrumb">
                <ul class="breadcrumb-title">
                    <li class="breadcrumb-item">
                        <a asp-action="index" asp-controller="Home"> <i class="icofont icofont-home"></i> </a>
                    </li>
                    <li class="breadcrumb-item">
                        <a>Subcategory</a>
                    </li>
                     <li class="breadcrumb-item">
                        <a href="#!">Create</a>
                    </li>
                </ul>
            </div>
        </div>
    </div>
</div>
<!-- Page-header end -->

<div class="row">
<div class="col-sm-12">
<!-- Basic Inputs Validation start -->
    <div class="card">
        <div class="card-header">
            <h5>Subcategory Form</h5>
            <span>Edit subcategory of <code>.item</code></span>
        </div>
        <div class="card-block">
            <form id="main" method="post" asp-action="EditSubCate" asp-controller="Categories" novalidate="">
                <input type="hidden" asp-for="SubCateL1_Id"/>
                <div class="form-group row has-error">
                    <label class="col-sm-2 col-form-label">SubCate Name</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control input-danger" asp-for="SubCateL1_En" placeholder="Subcategory Input Name">
                        <span class="text-danger labelstr" asp-validation-for="SubCateL1_En"></span>
                    </div>
                </div>
                <div class="form-group row has-error">
                    <label class="col-sm-2 col-form-label">SubCate Foreign</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control input-danger" asp-for="SubCateL1_Str" placeholder="Subcategory Input Foreign" required="required">
                        <span asp-validation-for="SubCateL1_Str"></span>
                    </div>
                </div>
                <div class="form-group row has-error">
                    <label class="col-sm-2 col-form-label">Category</label>
                    <div class="col-sm-10">
                        <select asp-for="Cate_Id" class="form-control required">
                            @foreach (var cate in cates as List<Category>)
                            {
                                <option value="@cate.CateId">@cate.Cate_En</option>
                            }
                        </select>
                    </div>
                </div>
                <div class="form-group row text-right">
                    <label class="col-sm-2"></label>
                    <div class="col-sm-10">
                        <button type="submit" class="btn btn-success m-b-0">Update</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
    <!-- Basic Inputs Validation end -->
    </div>
</div>

<script src="~/js/custom.js"></script>
