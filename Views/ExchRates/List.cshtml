@using resm_app.Models.BusinessObjects.Exchanges


    <div class="page-header ribbon-header">
        <div class="row align-items-end">
            <div class="col-lg-8">
                <div class="page-header-title">
                    <div class="d-inline">
                        <h4>Exchange Rate</h4>
                        <span>Exchange Rate Lists</span>
                    </div>
                </div>
            </div>
            <div class="col-lg-4">
                <div class="page-header-breadcrumb">
                    <ul class="breadcrumb-title">
                        <li class="breadcrumb-item">
                            <a asp-action="index" asp-controller="Home"> <i class="icofont icofont-home"></i> </a>
                        </li>
                        <li class="breadcrumb-item">
                            <a>Exchange Rate</a>
                        </li>
                        <li class="breadcrumb-item">
                            <a href="#!">Lists</a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>

<div class="card">
    <div class="card-header">
        <div class="text-right no-padding">
            <button type="button" asp-action="Add" asp-controller="ExchRates" class="btn btn-primary waves-effect">Create New</button>
        </div>
        
        <h4 class="sub-title" style="border-bottom:2px #00ACED solid ">Exchange Lists</h4>
    </div>
    <div class="card-block">
        <div class="dt-responsive table-responsive">
            <table id="footer-select" class="table table-striped table-bordered nowrap">
                <thead>
                <tr>
                    <th>N<sup>o</sup></th>
                    <th>Description</th>
                    <th>Dollar</th>
                    <th>Riel</th>
                    <th>Start Date</th>
                    <th>Start Time</th>
                    <th>End Date</th>
                    <th>End Time</th>
                    <th class="text-right">Action</th>
                </tr>
                </thead>
                <tbody>
                @{ int i = 1;}
                @foreach (var c in ViewBag.Exchagne as List<Exchange>)
                {
                    <tr>
                        <td>@i</td>
                        <td>@c.ExStr</td>
                        <td>@c.Dollar</td>
                        <td>@c.Riel</td>
                        <td>@c.Started?.ToString("yyyy/MM/dd")</td>
                        <td>@c.Start_Time</td>
                        <td>@c.End?.ToString("yyyy/MM/dd")</td>
                        <td>@c.End_Time</td>
                        @if (c.Default == "Y")
                        {
                            <td class="text-right">
                                <a class="btn-success btn-sm text-white"><i class="icofont icofont-check-circled text-center"></i></a>
                                @*<a class="btn-info btn-sm text-white" asp-action="Edit" asp-controller="ExchRates" asp-route-id="@c.Id">Edit</a>|
                                <a class="btn-danger btn-sm waves-effect md-trigger text-white" onclick="deletecompany(@c.Id);">Delete</a>*@
                            </td>
                        }
                        else
                        {
                            <td class="text-right">
                                <a class="btn-danger btn-sm text-white" onclick="setExchange(@c.Id)"><i class="icofont icofont-eye-alt"></i></a> |
                                <a class="btn-info btn-sm text-white" asp-action="Edit" asp-controller="ExchRates" asp-route-id="@c.Id">Edit</a>|
                                <a class="btn-danger btn-sm waves-effect md-trigger text-white" onclick="deleteExchange(@c.Id);">Delete</a>
                            </td>
                        }
                        
                    </tr>
                    i++;
                }
                </tbody>
            </table>
        </div>
    </div>
</div>

<script src="~/js/exchangerate.js"></script>