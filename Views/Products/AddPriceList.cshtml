@{
    Layout = "InvLayout/_InvLayout";
}
@model PriceList
<!-- Page-header start -->
<div class="page-header ribbon-header">
    <div class="row align-items-end">
        <div class="col-lg-8">
            <div class="page-header-title">
                <div class="d-inline">
                    <h4>PriceList</h4>
                    <span>PriceList Lists</span>
                </div>
            </div>
        </div>
        <div class="col-lg-4">
            <div class="page-header-breadcrumb">
                <ul class="breadcrumb-title">
                    <li class="breadcrumb-item">
                        <a asp-action="index" asp-controller="Home"> <i class="icofont icofont-home"></i> </a>
                    </li>
                    <li class="breadcrumb-item">
                        <a>PriceList</a>
                    </li>
                     <li class="breadcrumb-item">
                        <a href="#!">Lists</a>
                    </li>
                </ul>
            </div>
        </div>
    </div>
</div>
<!-- Page-header end -->
 @{await Html.RenderPartialAsync("ListPriceList");}
 <!-- Modal large-->
<div class="modal fade" id="whs-model" tabindex="-1" role="dialog">
   <div class="modal-dialog modal-lg" role="document">
       <div class="modal-content">
           <div class="modal-header">
               <h5 class="modal-title">PriceList</h5>
               <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                   <span aria-hidden="true">&times;</span>
               </button>
           </div>
        <div class="modal-body">
               <div class="row">
                   <div class="col-sm-12">
                       <!-- Basic Form Inputs card start -->
                       <div class="card">
                           <div class="card-block">
                               <h4 class="sub-title" style="border-bottom:2px #00ACED solid ">PriceList Form</h4>
                               <form asp-action="AddPriceList" asp-controller="Products" role="form" method="post" enctype="multipart/form-data">
                                   <div class="form-group row">
                                       <label class="col-sm-2 col-form-label" asp-for="PriceList_En">Price List <span class="text-danger">*</span></label>
                                       <div class="col-sm-10">
                                           <input type="text" asp-for="PriceList_En" class="form-control" required="required">
                                       </div>
                                   </div>
                                   <div class="form-group row">
                                       <label class="col-sm-2 col-form-label" asp-for="PriceList_Str">Price Foriegn</label>
                                       <div class="col-sm-10">
                                           <input type="text" asp-for="PriceList_Str" class="form-control">
                                       </div>
                                   </div>
                                   <div class="form-group text-right">
                                       <button type="submit" class="btn btn-primary">Submit</button>
                                   </div>
                               </form>
                           </div>
                       </div>
                   </div>
               </div>
           </div>
       </div>
   </div>
</div>

