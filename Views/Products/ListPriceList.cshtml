
<div class="card">
    <div class="card-header">
        <div class="text-right no-padding">
            <button type="button" class="btn btn-primary waves-effect" data-toggle="modal" data-target="#whs-model">Create New</button>
        </div>
        
        <h4 class="sub-title" style="border-bottom:2px #00ACED solid ">Price Lists</h4>
    </div>
    <div class="card-block">
        <div class="dt-responsive table-responsive">
            <table id="footer-select" class="table table-striped table-bordered nowrap">
                <thead>
                <tr>
                    <th>N<sup>o</sup></th>
                    <th>Price List</th>
                    <th class="text-right">Action</th>
                </tr>
                </thead>
                <tbody>
                @{ int i = 1;}
                @foreach (var c in ViewBag.PriceList as List<PriceList>)
                {
                    <tr>
                        <td>@i</td>
                        <td>@c.PriceList_En</td>
                        @if (c.Default == "Y")
                        {
                            <td class="text-right">
                                <a class="btn-success btn-sm text-white"><i class="icofont icofont-check-circled"></i></a> |
                                <a class="btn-info btn-sm text-white" asp-action="EditPriceList" asp-controller="Products" asp-route-id="@c.Id">Edit</a>
                                @*<a class="btn-danger btn-sm waves-effect md-trigger text-white" onclick="deletePriceList(@c.Id);">Delete</a>*@
                            </td>
                        }
                        else
                        {
                            <td class="text-right">
                                <a class="btn-danger btn-sm text-white" onclick="setPriceList(@c.Id)"><i class="icofont icofont-eye-alt"></i></a> |
                                <a class="btn-info btn-sm text-white" asp-action="EditPriceList" asp-controller="Products" asp-route-id="@c.Id">Edit</a>|
                                <a class="btn-danger btn-sm waves-effect md-trigger text-white" onclick="deletePriceList(@c.Id);">Delete</a>
                            </td>
                        }
                        
                    </tr>
                    i++;
                }
                </tbody>
            </table>
        </div>
    </div>
</div>

<script src="~/js/product.js"></script>