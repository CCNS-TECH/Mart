@{
    Layout = "InvLayout/_PchLayout";
}
@model BusinessPartner
<!-- Page-header start -->
<div class="page-header ribbon-header">
    <div class="row align-items-end">
        <div class="col-lg-8">
            <div class="page-header-title">
                <div class="d-inline">
                    <h4>Business Partner</h4>
                    <span>Create Business Partner</span>
                </div>
            </div>
        </div>
        <div class="col-lg-4">
            <div class="page-header-breadcrumb">
                <ul class="breadcrumb-title">
                    <li class="breadcrumb-item">
                        <a asp-action="index" asp-controller="Home"> <i class="icofont icofont-home"></i> </a>
                    </li>
                    <li class="breadcrumb-item">
                        <a>Business Partner</a>
                    </li>
                    <li class="breadcrumb-item">
                        <a href="#!">Create New</a>
                    </li>
                </ul>
            </div>
        </div>
    </div>
</div>
<!-- Page-header end -->

<div class="card">
    <div class="card-header">
        <h4> Form Registration</h4>
        <span>Create business partner with form wizard</span>

    </div>
    <div class="card-block">
        <div class="row">
            <div class="col-md-12">
                <div id="wizard2">
                    <section>
                        <form asp-action="Add_New" role="form" class="wizard-form" enctype="multipart/form-data" method="post">
                            <fieldset>
                                <div class="form-group row">
                                    <div class="col-md-6">
                                        <div class="col-sm-12">
                                            <label asp-for="VendorName" class="block">Full Name <span class="text-danger">*</span></label>
                                        </div>
                                        <div class="col-sm-12">
                                            <input asp-for="VendorName" type="text" class="form-control" placeholder="Vendor">
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="col-sm-12">
                                            <label asp-for="Email" class="block">Email <span class="text-danger">*</span></label>
                                        </div>
                                        <div class="col-sm-12">
                                            <input type="text" asp-for="Email" class="form-control required" placeholder="example@gmail.com" />
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <div class="col-md-6">
                                        <div class="col-sm-12">Gender <span class="text-danger">*</span></div>
                                        <div class="col-sm-12">
                                            <select asp-for="Gender" class="form-control required">
                                                <option value="Male">Male</option>
                                                <option value="Female">Female</option>
                                            </select>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="col-sm-12">Type <span class="text-danger">*</span></div>
                                        <div class="col-sm-12">
                                            <select asp-for="Type" class="form-control required">
                                                <option value="C">Customer</option>
                                                <option value="V">Vender</option>
                                            </select>
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <div class="col-md-6">
                                        <div class="col-sm-12">
                                            <label asp-for="Phone1">Phone <span class="text-danger">*</span></label>
                                        </div>
                                        <div class="col-sm-12">
                                            <input asp-for="Phone1" maxlength="10" type="text" class="form-control required" placeholder="Phone">
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="col-sm-12">
                                            <label asp-for="PriceListId">Price List <span class="text-danger">*</span></label>
                                        </div>
                                        <div class="col-sm-12">
                                            <select class="form-control required" asp-for="PriceListId">
                                                @foreach (var p in ViewBag.ListPrice as List<PriceList>)
                                                {
                                                    <option value="@p.Id">@p.PriceList_En</option>
                                                }
                                            </select>
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <div class="col-md-6">
                                        <div class="col-sm-12">
                                            <label asp-for="Phone2">Mobile </label>
                                        </div>
                                        <div class="col-sm-12">
                                            <input asp-for="Phone2" maxlength="10" type="text" class="form-control " placeholder="Mobile">
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="col-sm-12">
                                            <label asp-for="Address">Address <span class="text-danger">*</span></label>
                                        </div>
                                        <div class="col-sm-12">
                                            <textarea rows="4" asp-for="Address" class="required form-control" placeholder="Address"></textarea>
                                        </div>
                                    </div>
                                </div>

                            </fieldset>
                            <div class="col-sm-12 text-right">
                                <button type="submit" class="btn btn-primary">Submit</button>
                                <button type="reset" class="btn btn-danger">Reset</button>
                            </div>
                        </form>
                    </section>
                </div>
            </div>
        </div>
    </div>
</div>

